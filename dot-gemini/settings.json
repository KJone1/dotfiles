{
  "$schema": "https://raw.githubusercontent.com/google-gemini/gemini-cli/main/schemas/settings.schema.json",
  "general": {
    "previewFeatures": true,
    "preferredEditor": "neovim",
    "vimMode": false
  },
  "ui": {
    "hideWindowTitle": true,
    "hideTips": true,
    "hideBanner": true,
    "hideFooter": false
  },
  "privacy": {
    "usageStatisticsEnabled": false
  },
  "telemetry": {
    "enabled": false
  },
  "experimental": {
    "skills": true,
    "jitContext": true,
    "plan": true
  },
  "skills": {
    "enabled": true
  },
  "modelConfigs": {
    "customAliases": {
      "chat-base": {
        "modelConfig": {
          "generateContentConfig": {
            "temperature": 0
          }
        }
      }
    }
  },
  "context": {
    "fileName": ["CLAUDE.md", "GEMINI.md"],
    "includeDirectories": ["~/.claude", "~/.gemini"],
    "loadMemoryFromIncludeDirectories": true
  },
  "tools": {
    "allowed": [
      "run_shell_command(helm template)",
      "run_shell_command(helm lint)",
      "run_shell_command(helm show values)",
      "run_shell_command(kubectl explain)",
      "run_shell_command(kubectl get)",
      "run_shell_command(kubectl logs)",
      "run_shell_command(kubectl describe)",
      "run_shell_command(gh pr view)",
      "run_shell_command(find .)",
      "run_shell_command(gemini)",
      "run_shell_command(git rev-list)",
      "run_shell_command(git log)",
      "read_file",
      "web_fetch",
      "google_web_search"
    ]
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "advanced": {
    "excludedEnvVars": ["DEBUG", "DEBUG_MODE", "NODE_ENV"]
  }
}
