# vim:ft=zsh

HIST_STAMPS="dd.mm.yyyy"
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt SHARE_HISTORY

bindkey -e

bindkey '^[[1;5C' forward-word
bindkey '^[[1;5D' backward-word
bindkey '^H' backward-kill-word

eval "$(starship init zsh)"

# --- alias list ---
alias k="kubectl"
alias vim="nvim"
alias vi="nvim"
alias v="nvim"
alias ll="lfcd"
alias cat="bat"
alias k0s="sudo k0s"
alias t="terraform"
alias g="gcloud"
alias k9="k9s"
alias m="make"
alias lg="lazygit"
alias task="go-task"
alias blue='bluetoothctl'
# ---

autoload -Uz $HOME/.zfunc/*(:t)

